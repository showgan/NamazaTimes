<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient resembling a darkened version of the light turquoise image -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#0B3B40"
                android:centerColor="#0F2E33"
                android:endColor="#121212"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle overlay to mimic the light-to-dark transition near the bottom -->
    <item android:top="0dp" android:bottom="120dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#0B3B40"
                android:endColor="#0B3B40"
                android:type="linear" />
            <size android:height="200dp" />
        </shape>
    </item>

    <!-- Optional soft vignette at bottom to blend with dark background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#80000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
