<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mainBackgroundShadow"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- the background -->
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainBackgroundSelected"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>
